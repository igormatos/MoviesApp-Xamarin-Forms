<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
		Title="Detail"
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="MovieApp.DetailPage">
	<ContentPage.Content>
	<ScrollView BackgroundColor="#081c24">
		<StackLayout>
			<Image Source="{Binding Backdrop_path, StringFormat='https://image.tmdb.org/t/p/w640/{0}'}" ></Image> 
			<Image Source="ic_bookmark_border.png"></Image>
			<Label Text="{Binding Title}" FontSize="34" Margin="10,0,0,0" TextColor="#01d277" XAlign="Start"></Label>

			<Label TextColor="#f4f4f4" Margin="10,0,10,0" Text="{Binding Overview}"></Label>
			
		</StackLayout>
		</ScrollView>
	</ContentPage.Content>
</ContentPage>
